[Unit]
Description=Atlassian Confluence Service
After=network.target syslog.target postgresql.service

[Service]
Type=simple
User=confluence
PIDFile={{ atlassian_confluence_dir }}/work/catalina.pid
ExecStart={{ atlassian_confluence_dir }}/bin/start-confluence.sh -fg
ExecStop={{ atlassian_confluence_dir }}/bin/stop-confluence.sh
SuccessExitStatus=143
#TimeoutStartSec=900

[Install]
WantedBy=multi-user.target
